

<% console %>
<%= render 'header' %>

<div style="display: grid; grid-template-columns: 1fr 1fr 1fr;" >
  <% @movies.each do |movie| %>
  <div>
    <h5><%= movie.title %></h5>
    <p><%= movie.overview %></p>
    <p style="background-color: lightgrey; border: 1px solid black;">
    <%= @bookmarks.find_by(movie_id: movie.id).comment %>
    </p>
    <%= link_to "Delete bookmark",
    bookmark_path( @bookmarks.find_by(movie_id: movie.id)), method: :delete %>
  </div>
  <% end %>
</div>


<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
